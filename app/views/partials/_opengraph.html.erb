<% if SiteSetting.enable_opengraph %>
<meta property="og:title" content="<%= SiteSetting.opengraph_sitename %>" />
<% unless SiteSetting.site_description.blank? %>
<meta property="og:description" content="<%= SiteSetting.site_description %>" />
<% end %>
<meta property="og:image" content="<%= SiteSetting.opengraph_image %>" />
<% end %>
