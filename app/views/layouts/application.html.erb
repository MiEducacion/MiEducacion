<!DOCTYPE html>
<html>
   <head>
      <meta charset="utf-8">
      <title><%= site_name.to_s %></title>
      <%= csrf_meta_tags %>
      <%= csp_meta_tag %>
<%= render partial: "layouts/head" %>
      <%= render partial: "common/mieducacion_stylesheet" %>
      <script type="text/x-template" data-template-name="additional-nav-buttons">
            <v-btn text> I am a Button rendered on a slot</v-btn>
      </script>
   </head>    
   <div class="hidden" id="data-preloaded" data-preloaded="<%= preloaded_json %>"></div>
   <body
      class="app-body<% if device == "mobile" %> is-mobile<% end %>"
      data-user-status="<%= j(user_logged_in_status) %>">
      <!--The application is rendered at runtime on client-side-->
      <div id="mieducacion"></div>
      <noscript data-path="<%= request.env["PATH_INFO"] %>">
         <%= render partial: "layouts/noscript_header" %>
         <div>
            <!-- Fallback in case of JavaScript disabled / Crawler -->
            <%= yield %>
            <!-- End of Fallback -->
         </div>
         <%= render partial: "layouts/noscript_footer" %>
      </noscript>
      <%= javascript_packs_with_chunks_tag "start-mieducacion" %>
   </body>
</html>