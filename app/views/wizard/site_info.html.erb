<div class="wizard-column">
   <div class="wizard-column-contents">
      <div class="wizard-step-contents">
         <h1 class="wizard-step-title text-center mx-auto">Site information</h1>
         <div class="mx-auto text-center">
         <%= image_tag 'illustrations/mieducacion-wizard-welcome.png', class: 'welcome-banner--img', width: 280, :draggable => false %>
         </div>

        <h1 class="welcome-step-text text-center mx-auto pt-5">
        Ready to set up your site?
        </h1>

<%= @site_info[0].values[0] %> 
        

      <div class="text-center d-grid gap-2 cols-6">
        <%= form_for @site_info.to_json, url: wizard_path , method: :put do |f| %>
         <button type="submit" class="btn btn-dark mt-4">Next</button>
         <% end %>
         </div>
      </div>
   </div>
   <div class="wizard-footer">
      <div class="mieducacion-logo">
         <%= image_tag SiteSettings.site_logo, id: 'site-logo' %>
      </div>
   </div>
</div>